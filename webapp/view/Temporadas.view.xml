<mvc:View
    controllerName="evaluatorweb.controller.Temporadas"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:flexbox="sap.m"
    displayBlock="true"
>
    <Toolbar id="toolbar">
        <content>
            <ToolbarSpacer id="toolBar" />
            <Button
                id="crearTemporada"
                text="Crear Nueva Temporada"
                press=".onCrearTemporada"
            />
        </content>
    </Toolbar>

    <!-- ... -->

    <Dialog
        id="crearTemporadaDialog"
        title="Crear Nueva Temporada"
        contentWidth="500px"
        afterClose=".onCrearTemporadaDialogClose"
        class="myDialog"
    >
        <content>
            <Panel id="_IDGenPanel1">
                <Label
                    class="LabelWithInput"
                    id="Labelid"
                    text="ID"
                />
                <Input
                    id="id"
                    value="{id}"
                />

                <Label
                    class="LabelWithInput"
                    id="labelInicio1"
                    text="Fecha de inicio"
                />
                <DatePicker
                    id="inicio"
                    value="{start_date}"
                />

                <Label
                    class="LabelWithInput"
                    id="labelFIN"
                    text="Fecha de fin"
                />
                <DatePicker
                    id="fin"
                    value="{end_date}"
                />
                <Label
                    class="LabelWithInput"
                    id="temporada1"
                    text="NÃºmero de temporada"
                />
                <Input
                    id="inputTemporada"
                    value="{season_number}"
                />
            </Panel>
            <Panel id="_IDGenPanel2">
                <content>
                    <HBox id="_IDGenHBox1">
                        <items>
                            <Button
                                id="buttonCrear"
                                text="Crear"
                                press=".onSubmit"
                                class="dialogButton"
                            />
                            <Button
                                id="buttonCancel"
                                text="Cancelar"
                                press=".onCrearTemporadaDialogClose"
                                class="dialogButton"
                            />
                        </items>
                    </HBox>
                </content>
            </Panel>
        </content>
    </Dialog>

    <table:Table
        enableSelectAll="false"
        id="myTable"
        rows="{/Season}"
        selectionMode="None"
    >
        <table:columns>
            <table:Column id="temporada">
                <Label
                    text="Temporada"
                    id="labeltemporada"
                />
                <table:template>
                    <Text
                        id="nombreTemporada"
                        text="{id}"
                    />
                </table:template>
            </table:Column>

            <table:Column id="columnaInicio">
                <Label
                    id="labelInicio"
                    text="Fecha de inicio"
                />
                <table:template>
                    <Text
                        id="textInicio"
                        text="{
                path: 'start_date',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                    pattern: 'yyyy-MM-dd'
                }
            }"
                    />
                </table:template>
            </table:Column>

            <table:Column id="columnaFin">
                <Label
                    id="labelFin"
                    text="Fecha de fin"
                />
                <table:template>
                    <Text
                        id="textFin"
                        text="{
                path: 'end_date',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                    pattern: 'yyyy-MM-dd'
                }
            }"
                    />
                </table:template>
            </table:Column>

            <table:Column id="columnStatus">
                <Label
                    id="labelStatus"
                    text="Status"
                />
                <table:template>
                    <Text
                        id="textStatus"
                        text="{status}"
                    >
                        <customData>
                            <core:CustomData
                                key="status"
                                value="{status}"
                                writeToDom="true"
                            />
                        </customData>
                    </Text>
                </table:template>
            </table:Column>

            <table:Column id="columnaAcciones">
                <Label
                    id="labelAcciones"
                    text="Acciones"
                />
                <table:template>
                    <flexbox:HBox
                        id="flexbox"
                        justifyContent="SpaceBetween"
                    >
                        <items>
                            <Button
                                id="buttonAcciones"
                                text="{= ${status} === 'abierta' ? 'Cerrar' : 'Abrir'}"
                                press=".onButtonPress"
                            />
                            <Button
                                id="buttonEliminar"
                                icon="sap-icon://delete"
                                press=".onButtonEliminarPress"
                            />
                        </items>
                    </flexbox:HBox>
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</mvc:View>
